.dialog-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.6);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 100;
}

.dialog {
  width: 300rpx;
  padding: 20rpx;
  background-color: #ffffff;
  border-radius: 10rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.dialog-title {
  font-size: 24rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.dialog-content {
  font-size: 20rpx;
  margin-bottom: 20rpx;
}